                                    li.indent-3.line-1 &#60;link rel="stylesheet" href="/dist/handsontable.full.css" /&#62;
                                    li.indent-2 &#60;/head&#62;
                                    li.indent-2 &#60;body&#62;
                                    li.indent-3.line-2 &nbsp;&nbsp;&#60;div id="example"&#62; &#60;/div&#62;
                                    li.indent-3.line-2 &#60;script&#62;
                                    li.indent-4.line-2 var data = [['Column A', 'Column B', 'Column C'], ['1', '2', '3']];
                                    li.indent-4.line-2 var container = document.getElementById("example");
                                    li.indent-4.line-2 var hot = new Handsontable(container, {
                                    li.indent-5.line-2 data: data
                                    li.indent-4.line-2 });
                                    li.indent-3.line-2 &#60;/script&#62;
                                    li.indent-2 &#60;/body&#62;
                                    li.indent-1 &#60;/html&#62;
